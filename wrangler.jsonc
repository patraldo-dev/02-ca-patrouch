{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "02-ca-patrouch",
	"main": ".svelte-kit/cloudflare/_worker.js",
	"compatibility_date": "2025-09-13",
	"compatibility_flags": [
		"nodejs_als"
	],
	"assets": {
		"binding": "ASSETS",
		"directory": ".svelte-kit/cloudflare"
	},
	"observability": {
		"enabled": true
	},

	"vars": {
                "MAILGUN_DOMAIN": "patrouch.ca",
	       	"CONTACT_EMAIL": "contact@patrouch.ca",
	       	"MAILGUN_FROM_EMAIL": "noreply@patrouch.ca"
        },

        "d1_databases": [
        {
          "binding": "DB_book",
          "database_name": "patrouch-ca-book-app",
          "database_id": "0c520f9b-425c-4d29-b2a9-4dbd2ba1def6"
        }
      ],

	"images": {
		"binding": "IMAGES"  // ‚Üê This will be available as env.IMAGES in your Worker
	    }
